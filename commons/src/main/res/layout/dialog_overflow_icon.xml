<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/icon_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/icon0"
            android:layout_width="@dimen/min_row_height"
            android:layout_height="@dimen/min_row_height"
            android:layout_marginTop="@dimen/larger_margin"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/activity_margin"
            android:src="@drawable/ic_more_horiz" />

        <ImageView
            android:id="@+id/icon1"
            android:layout_width="@dimen/min_row_height"
            android:layout_height="@dimen/min_row_height"
            android:layout_marginTop="@dimen/larger_margin"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_toEndOf="@+id/icon0"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/activity_margin"
            android:src="@drawable/ic_three_dots_vector" />

        <ImageView
            android:id="@+id/icon2"
            android:layout_width="@dimen/min_row_height"
            android:layout_height="@dimen/min_row_height"
            android:layout_marginTop="@dimen/larger_margin"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_toEndOf="@+id/icon1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/activity_margin"
            android:src="@drawable/ic_more_horiz_round" />
    </RelativeLayout>

</RelativeLayout>
