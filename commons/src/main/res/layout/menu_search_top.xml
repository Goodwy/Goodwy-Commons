<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/searchBarContainer"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        tools:layout_height="56dp">

        <RelativeLayout
            android:id="@+id/toolbarContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/ten_dpi"
            android:layout_marginBottom="@dimen/ten_dpi"
            android:layout_marginStart="@dimen/activity_margin"
            android:layout_marginEnd="@dimen/activity_margin"
            android:focusableInTouchMode="true"
            android:background="@drawable/search_bg"
            android:backgroundTint="@color/activated_item_foreground">

            <ImageView
                android:id="@+id/topToolbarSearchIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:paddingStart="@dimen/normal_margin"
                android:src="@drawable/ic_search_vector"
                android:contentDescription="@null" />

            <com.goodwy.commons.views.MyEditText
                android:id="@+id/topToolbarSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/topToolbarSearchClear"
                android:layout_toEndOf="@+id/topToolbarSearchIcon"
                android:layout_marginEnd="@dimen/smaller_margin"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:hint="@string/search"
                android:lines="1"
                android:maxLines="1"
                android:paddingStart="@dimen/normal_margin"
                android:singleLine="true"
                android:textSize="@dimen/big_text_size" />

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topToolbar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/small_margin"
                android:background="@android:color/transparent"
                app:titleTextAppearance="@style/AppTheme.ActionBar.TitleTextStyle" />

            <ImageView
                android:id="@+id/topToolbarSearchClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/topToolbar"
                android:layout_centerVertical="true"
                android:background="?selectableItemBackgroundBorderless"
                android:alpha="0.4"
                android:src="@drawable/ic_clear_round"
                android:contentDescription="@string/delete"
                android:visibility="gone"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/topToolbarSearchSpeechToText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/topToolbar"
                android:layout_centerVertical="true"
                android:background="?selectableItemBackgroundBorderless"
                android:alpha="0.4"
                android:src="@drawable/ic_microphone_vector"
                android:visibility="gone"
                android:contentDescription="@string/voice_input"
                tools:visibility="visible" />

        </RelativeLayout>
    </FrameLayout>
</merge>
